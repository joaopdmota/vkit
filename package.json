{
  "name": "vkit",
  "version": "0.1.3",
  "author": "Vitta SaÃºde",
  "description": "Vkit Material Component Framework",
  "engines": {
    "node": ">=14.17.6",
    "yarn": ">=1.22.5"
  },
  "files": [
    "lib/components",
    "lib/context",
    "lib/main",
    "lib/modules",
    "lib/services",
    "lib/shared",
    "lib/theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.vitta.tools/front-end/vkit.git"
  },
  "bugs": {
    "url": "https://gitlab.vitta.tools/front-end/vkit/-/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "apollo-link-timeout": "^4.0.0",
    "eva-icons": "^1.1.3",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "node-sass": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-transition-group": "^4.4.2",
    "sass": "^1.38.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "dev": "webpack serve --mode development --env development --open",
    "build": "rm -rf lib && tsc src/**/*.ts --declaration --allowJs --emitDeclarationOnly --outDir lib && NODE_ENV=production babel src --out-dir lib --extensions '.js,.jsx,.ts,.tsx' --source-maps --copy-files && find lib/ -name '*.example.*' -delete && find lib/ -path '*/example/*' -delete",
    "lint": "eslint ./src/ --fix",
    "prettier:format": "prettier --write 'src/**/*.{ts,js,tsx,jsx,scss}'",
    "prettier:check": "prettier --check 'src/**/*.{ts,js,tsx,jsx,scss}'",
    "branch-name-lint": "node branch-name-lint.config.js",
    "release": "standard-version"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn branch-name-lint && yarn prettier:check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext .jsx,.js,.ts,.tsx --max-warnings=0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitizen": "^4.2.4",
    "css-loader": "^5.2.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.27.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "2.4.1",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "sass-loader": "^12.0.0",
    "standard-version": "^9.3.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
